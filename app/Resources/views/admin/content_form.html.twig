{% form_theme form 'form_errors.html.twig' %}

{% extends 'admin_base.html.twig' %}
{% block body %}
    <div><a href="{{ path('admin_content') }}" class="btn btn-primary">View All</a> <a href="{{ path('admin_content_add') }}" class="btn btn-primary">New Content</a> </div>
    <br />
    {{ form_start(form) }}
    {{ form_errors(form) }}
<div class="animated fadeInDownSmall">
    <fieldset class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title) }}
    </fieldset>
    <fieldset class="form-group">
        {{ form_label(form.content) }}
        {{ form_errors(form.content, {'attr': {'class': 'form-control'}}) }}
        {{ form_widget(form.content) }}
    </fieldset>
    <fieldset class="form-group">
        {{ form_widget(form.save) }}
        {{ form_widget(form.saveAndAdd) }}
    </fieldset>
</div>
    {{ form_end(form) }}

{% endblock %}

